RUN echo "$DOCKER_GID"
RUN echo "$USER"
RUN groupadd --system --gid $DOCKER_GID docker \
  && usermod --append --groups docker $USER


RUN apt-get update --yes && \
  apt-get install --yes \
    docker.io \
    docker-buildx \
    docker-compose-v2 \
  && \
  apt-get -qq clean && \
  rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

